<div class="row text-center">
  <div class="col-md-4 borda">
    <h2>Entre em contato!</h2>
    <p>Nos envie uma mensagem para que fique dentro de nossos eventos</p>

    <form asp-action="Cadastrar" method="POST">

            <div class="form-group row">
                <label asp-for="Nome" class="col-3">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control  col-8" required/>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-3">Email:</label>
                <input asp-for="Email" type="email" class="form-control col-8" required/>
            </div>
            <div class="form-group row">
                <label asp-for="Mensagem" class="col-3">Mensagem (opcional):</label>
                <textarea asp-for="Mensagem" class="form-control  col-8" rows="3"></textarea>
            </div>
            <div class="form-group row">
                <div class="col-8"> @ViewBag.msg</div>
                <input type="submit" value="Enviar" class="txbutton" />
                <div class="col-1"></div>

            </div>

        </form><!--FORMULARIO-->

  </div><!--col-->
    
 </div><!--FIM ROW 2-->